/* pages/shopping_cart/shopping_cart.wxss */
.cart_container {
  display: flex;
  flex-direction: row;
}
.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}
.scroll {
  margin-bottom: 120rpx;
}
/* 商品名称和价格 */
.column {
  display: flex;
  flex-direction: column;
}
.title {
  font-size: 38rpx;
  margin-top: 40rpx;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.sku-price {
  color: red;
  position: relative;
  margin-top: 70rpx;
}
/* 数量的加减 */
.sku {
  margin-top: 60rpx;
  margin-left: 150rpx;
}
.label{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
  
}
.item{
  display: flex;
  flex-direction: row;
  /* background-color: red; */
  line-height: 20px;
}
/* 底部的结算区域 */
.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}
.price {
  color: red;
  position: relative;
}
.button-red {
  background-color: #f44336; /* 红色 */
}

.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}
button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}