/* pages/me/me.wxss */
 .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; 
  padding: 30px 0;
  height: 200rpx;
  background-color: #f8c291;
  font-size: 30rpx;
}
.user-btn{
  background: #fff;
  padding: 0 !important;
  border: none !important;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.userinfo-nickname {
  font-size: 30rpx;
  color: #000;
}
.myOrder{
  font-size: 26rpx;
  padding: 20rpx 20rpx;
}
.hr{
  height: 2rpx;
  background-color: #ececec;
}
.middle{
  display: flex;
  flex-direction: row;
  padding: 10px 0;
}
.middle-item{
  width: 25%;
  text-align: center;
}
.img{
  width: 60rpx;
  height: 60rpx;
}
.text{
  font-size: 26rpx;
}
.bottom-item{
  display: flex;
  flex-direction: row;
  line-height: 50px;
  padding-left: 20px; 
  border-bottom: 1px solid #dcdcdc;
}
.img1{
  width: 30px;
  height: 30px;
  vertical-align: middle;
}
.text-item{
  margin-left: 10px;
  font-size: 30rpx;
}