 .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; 
  margin: 30px 0;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx; 
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}
.hr{
  height: 10px;
  background-color: #dcdcdc;
}
.middle{
  display: flex;
  flex-direction: row;
  padding: 10px 0;
  
  
}
.middle-item{
  width: 25%;
  text-align: center;
}
.img{
  width: 50px;
  height: 50px;
}
.bottom-item{
  display: flex;
  flex-direction: row;
  line-height: 50px;
  padding-left: 20px; 
  border-bottom: 1px solid #dcdcdc;
}
