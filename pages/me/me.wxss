/* pages/me/me.wxss */
 .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center; 
  margin: 30px 0;
  height: 200rpx;
}
.user-btn{
  background: #fff;
  padding: 0 !important;
  border: none !important;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.userinfo-nickname {
  font-size: 30rpx;
  color: #ffbe76;
}
.hr{
  height: 10rpx;
  background-color: #ececec;
}
.middle{
  display: flex;
  flex-direction: row;
  padding: 10px 0;
  
  
}
.middle-item{
  width: 25%;
  text-align: center;
}
.img{
  width: 80rpx;
  height: 80rpx;
}
.text{
  font-size: 30rpx;
}
.bottom-item{
  display: flex;
  flex-direction: row;
  line-height: 50px;
  padding-left: 20px; 
  border-bottom: 1px solid #dcdcdc;
}
.img1{
  width: 30px;
  height: 30px;
  vertical-align: middle;
}
.text-item{
  margin-left: 10px;
  font-size: 30rpx;
}